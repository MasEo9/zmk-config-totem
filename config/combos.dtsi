/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

// left hand combos
// upper row
/*
  │ ! < > - % │ 
*/
ZMK_COMBO(excl,  &kp EXCL,   LT3 LM2, ALL, 30)
ZMK_COMBO(lt,    &kp LT,     LT3 LT2, ALL, 30)
ZMK_COMBO(gt,    &kp GT,     LT1 LT2, ALL, 30)
ZMK_COMBO(minus, &kp MINUS,  LT1 LM2, ALL, 30)
ZMK_COMBO(prcnt, &kp PRCNT,  LT1 LT0, ALL, 30)

// middle row
/*
  │ ` ' _ = │ 
*/
ZMK_COMBO(grave,  &kp GRAVE, LM4 LM3, ALL, 30)
ZMK_COMBO(sqt,    &kp SQT,   LM3 LM2, ALL, 30)
ZMK_COMBO(under,  &kp UNDER, LM1 LM2, ALL, 30)
ZMK_COMBO(equal,  &kp EQUAL, LM0 LM1, ALL, 30)

// bottom row
/*
  │ ~ [ ] * & │ 
*/
ZMK_COMBO(tilde,  &kp TILDE, LB3 LM2, ALL, 30)
ZMK_COMBO(lbkt,   &kp LBKT,  LB3 LB2, ALL, 30)
ZMK_COMBO(rbkt,   &kp RBKT,  LB2 LB1, ALL, 30)
ZMK_COMBO(star,   &kp STAR,  LM2 LB1, ALL, 30)
ZMK_COMBO(amps,   &kp AMPS,  LB1 LB0, ALL, 30)

